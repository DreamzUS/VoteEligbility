age = int(input("Enter Age:"))

if age >= 18:
    status = "eligible"
else:
    status = "not eligible"

print("You are",status, "to vote.")

if status == 'not eligible':
    print("Please come back when you are of legal voting age in your state.")

if status == 'eligible':
    print("Are you registered to vote?")
    input = input()
    input = input.lower()
    if input == 'yes':
            print("Great! Election Day is coming soon! Make your voice heard!")
    elif input == 'no':
        print("Oh no! You can register here in just a few minutes. Your vote is important! https://www.vote.org/register-to-vote%22")
